                            @Html.AntiForgeryToken()
                        }
                    </ul>
                </div>
            </div>
            <!-- END Sub Header -->
            <!-- Page Content -->
            <div class="content content-boxed">
                @RenderBody()
            </div>
            <!-- END Page Content -->
        </main>
        <!-- END Main Container -->
        <!-- Footer -->
